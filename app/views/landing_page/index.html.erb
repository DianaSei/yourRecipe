<div id="background-pic">
	<img src="/background.jpg" style="width: 100%" id="picture">
</div>

<div id="content">
	<h1>Welcome to YourRecipe!</h1>
	<p>Search what you want to cook today</p>
		<form class="form-inline justify-content-center text-light" action="/search">
		     <input class="form-control mr-sm-2 d-inline-block" type="search" placeholder="Chicken breast" aria-label="Search" name="ingredient" required value="<%=params[:ingredient]%>"> 
		     <button class="btn my-2 my-sm-0 d-inline-block" style="color: white; background-color: #3ac9c6" type="submit">Search</button>
   		</form>
</div>


<div id="search-div" class="d-flex justify-content-center form-inline my-2 my-lg-0 d-inline-block">
          <%= form_tag trip_actions_path(params[:trip_id]), id: "action-search", method: :get do %>

            <%= text_field_tag "term", nil, id: "search", list: "list", placeholder: "Search", class: "form-control mr-sm-2" %>
           	<%= hidden_field_tag(:actiontype, value = params[:actiontype]) %>

            <datalist id="list"></datalist>
          <% end %>
</div>

<h1> The profiles of other users with more recipes: </h1>
<%@users.each do |u| %>
	<% user_recipces = @recipes.where(reference_id: u.id) %>
	<%if user_recipces.length > 0 %>
	<p> <%= u.first_name + u.last_name %></p>
	<ul>
	 <%user_recipces.each do |ur|%>
	 	<li> <%= ur.title %> </li>
	 	<%end%>
	 </ul>
	 	<%end%>
	 <%end%>


